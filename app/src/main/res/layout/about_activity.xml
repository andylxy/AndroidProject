<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.activity.AboutActivity">

    <com.hjq.bar.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/about_title" />

    <com.hjq.widget.view.ScaleImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        app:scaleRatio="1.5"
        app:srcCompat="@drawable/launcher_ic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_author_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/about_author"
            android:textColor="#222222"
            android:textSize="@dimen/sp_18" />


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/dp_30"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_horizontal|left"
                    android:padding="@dimen/dp_5"
                    android:text="@string/about_thks"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_thks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|left"
                    android:padding="@dimen/dp_5"
                    android:text="@string/about_version"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_horizontal|left"
                    android:padding="@dimen/dp_5"
                    android:text="@string/about_manual"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_developer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:gravity="center_horizontal|left"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:padding="@dimen/dp_5"
                    android:text="@string/about_developer"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_14" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_horizontal|left"
                    android:padding="@dimen/dp_5"
                    android:text="@string/about_updata"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_16" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_updata_log"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="all"
                    android:gravity="center_horizontal|left"
                    android:lineSpacingExtra="@dimen/dp_6"
                    android:padding="@dimen/dp_5"
                    android:text="@string/about_updata_log"
                    android:textColor="#222222"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_copyright"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_15"
        android:text="@string/about_copyright"
        android:textColor="#BDBDBD"
        android:textSize="@dimen/sp_14" />

</LinearLayout>