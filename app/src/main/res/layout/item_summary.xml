<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/chat_history_item_bg_even"
    android:paddingStart="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_8"
    android:paddingTop="@dimen/dp_6"
    android:paddingBottom="@dimen/dp_6">

    <!-- 标题行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_summary_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="总结标题"
            android:textSize="@dimen/chat_subtitle_text_size"
            android:textColor="#212121"
            android:textStyle="normal"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/tv_summary_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#757575"
            android:textSize="@dimen/chat_tiny_text_size"
            android:layout_marginEnd="@dimen/dp_10" />

        <ImageButton
            android:id="@+id/btn_delete_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:contentDescription="删除总结"
            android:scaleType="centerInside"
            android:maxWidth="@dimen/dp_32"
            android:maxHeight="@dimen/dp_32" />

    </LinearLayout>

    <!-- 总结内容预览 -->
    <TextView
        android:id="@+id/tv_summary_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:ellipsize="end"
        android:visibility="gone"
        android:maxLines="2"
        android:text="总结内容预览..."
        android:textColor="#757575"
        android:textSize="@dimen/chat_content_text_size" />

</LinearLayout>
