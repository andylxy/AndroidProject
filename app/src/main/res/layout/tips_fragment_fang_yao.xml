<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 搜索栏容器 - 使用 include 引用可复用搜索栏 -->
    <RelativeLayout
        android:id="@+id/search_bar_wrapper"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">

        <include layout="@layout/include_search_bar" />
    </RelativeLayout>

    <com.hjq.widget.layout.NestedLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hjq.widget.layout.WrapRecyclerView
            android:id="@+id/tips_book_fang_yao_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_2"
            android:background="#D3D3D3"
            android:padding="@dimen/dp_2" />

        <TextView
            android:id="@+id/ll_no_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_100"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_100"
            android:text="当前无任药方数据"
            android:textColor="@color/sys_dialog_setting_word_red"
            android:textSize="@dimen/sp_16"
            android:visibility="gone" />
    </com.hjq.widget.layout.NestedLinearLayout>
</LinearLayout>