<?xml version="1.0" encoding="utf-8"?>
<!-- 可复用搜索栏布局 
     使用 merge + tools:parentTag 实现预览和运行时的最佳效果 -->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.widget.RelativeLayout"
    tools:layout_height="@dimen/dp_44"
    tools:layout_width="match_parent"
    tools:background="#B4B0B0">

    <!-- 搜索按钮 -->
    <Button
        android:id="@+id/tips_btn_search"
        android:layout_width="@dimen/dp_42"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-4dp"
        android:layout_marginLeft="-4dp"
        android:background="#B4B0B0"
        android:text="搜索"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <!-- 搜索输入框容器 -->
    <FrameLayout
        android:id="@+id/titlebar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_44"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_toStartOf="@+id/tips_btn_search"
        android:layout_toLeftOf="@+id/tips_btn_search"
        android:background="#B4B0B0"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <!-- 搜索输入框 -->
        <com.hjq.widget.view.ClearEditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/corners"
            android:gravity="start|center"
            android:hint="输入搜索关键字"
            android:inputType="text"
            android:paddingStart="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9"
            android:singleLine="true"
            android:textSize="@dimen/sp_15"
            tools:ignore="TouchTargetSizeCheck" />

        <!-- 结果数量提示 -->
        <TextView
            android:id="@+id/numTips"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/sp_38"
            android:layout_marginRight="@dimen/sp_38"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="@dimen/sp_12"
            tools:text="10个结果" />
    </FrameLayout>
</merge>
