<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_show_item_one"
        >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/nothing"
            android:cursorVisible="false"
            android:inputType="none"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/sys_protect_eye_word"
            android:textSize="22sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_title_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/read_section_background"
            android:cursorVisible="false"
            android:inputType="none"
            android:padding="@dimen/dp_5"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/read_section"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_FangJi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/nothing"
            android:cursorVisible="false"
            android:inputType="none"
            android:lineSpacingMultiplier="1.5"
            android:padding="@dimen/dp_5"
            android:textColor="@color/sys_protect_eye_word"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_FangJiZhujie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:background="@color/read_fangjizhujie_background"
            android:cursorVisible="false"
            android:inputType="none"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/sys_protect_eye_word"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:background="@color/nothing"
            android:cursorVisible="false"
            android:inputType="none"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/sys_protect_eye_word"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:cursorVisible="false"
            android:gravity="center"
            android:inputType="none"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_22" />

        <TextView
            android:id="@+id/tv_video_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:background="@color/nothing"
            android:cursorVisible="false"
            android:inputType="none"
            android:lineSpacingMultiplier="1.5"
            android:textColor="@color/sys_protect_eye_word"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_show_item_two"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginLeft="@dimen/dp_10"
            >

            <TextView
                android:id="@+id/tv_section_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/read_section_title_background"
                android:cursorVisible="false"
                android:inputType="none"
                android:lineSpacingMultiplier="1.5"
                android:padding="@dimen/dp_2"
                android:text="章节标题"
                android:textColor="#DDF8FE" />

            <TextView
                android:id="@+id/tv_section_title_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:background="@color/read_section_title_background"
                android:cursorVisible="false"
                android:inputType="none"
                android:lineSpacingMultiplier="1.5"
                android:padding="@dimen/dp_2"
                android:text="15"
                android:textColor="#DDF8FE" />
        </LinearLayout>
        <View style="@style/HorizontalLineStyle"
            android:id="@+id/horizontalline"
            android:layout_height="@dimen/dp_2"
            android:background="@color/read_section_divider_line"/>
        <TextView
            android:id="@+id/tv_section_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:background="@color/nothing"
            android:inputType="none"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="章节正文"
            android:textColor="@color/sys_protect_eye_word"
             />
        <View style="@style/HorizontalLineStyle"
            android:layout_height="@dimen/dp_2"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/read_section_divider_line"/>
        <TextView
            android:id="@+id/tv_section_content_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_2"
            android:background="@color/nothing"
            android:cursorVisible="false"
            android:inputType="none"
            android:lineSpacingMultiplier="1.5"
            android:layout_marginLeft="@dimen/dp_5"
            android:text="章节注解"
            android:textColor="@color/read_cursor_textColor"
             />
        <View style="@style/HorizontalLineStyle"
            android:id="@+id/vw_section_divider_line"
            android:layout_height="@dimen/dp_2"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/read_section_divider_line"
           />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_loading_error_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="加载失败，点击重新加载"
        android:visibility="gone" />


</RelativeLayout>