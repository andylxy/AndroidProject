<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_8"
    android:paddingEnd="@dimen/dp_8"
    android:paddingTop="@dimen/dp_6"
    android:paddingBottom="@dimen/dp_6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_chat_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="聊天记录标题"
            android:textColor="#212121"
            android:textSize="@dimen/chat_subtitle_text_size"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tv_chat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#757575"
            android:textSize="@dimen/chat_tiny_text_size"
            android:layout_marginEnd="@dimen/dp_10" />

        <ImageButton
            android:id="@+id/btn_edit_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:contentDescription="编辑标题"
            android:scaleType="centerInside"
            android:maxWidth="@dimen/dp_32"
            android:maxHeight="@dimen/dp_32" />

        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:paddingTop="@dimen/dp_4"
            android:paddingBottom="@dimen/dp_4"
            android:contentDescription="删除会话"
            android:scaleType="centerInside"
            android:maxWidth="@dimen/dp_32"
            android:maxHeight="@dimen/dp_32" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_chat_preview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:text="聊天内容预览"
        android:textColor="#757575"
        android:textSize="@dimen/chat_content_text_size"
        android:maxLines="2"
        android:ellipsize="end"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_message_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:text="消息数量"
        android:textColor="#9E9E9E"
        android:textSize="@dimen/chat_tiny_text_size"
        android:gravity="end" />

</LinearLayout>