<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textSize="@dimen/sp_12"
        android:padding="@dimen/dp_4"
        android:textColor="@android:color/white"
        android:background="@drawable/chat_time_bg"
        android:id="@+id/chat_receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="4月12日 早上07:51" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6">

        <ImageView
            android:id="@+id/iv_receive_picture"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/chat_ai_default"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/ll_thinking_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_receive_picture"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_12"
            android:background="@drawable/chat_bubble_receive"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_12"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_10">

            <!-- Header: "正在思考..." + 箭头 -->
            <LinearLayout
                android:id="@+id/ll_thinking_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/dp_6">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="正在思考..."
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="italic"/>

                <TextView
                    android:id="@+id/tv_thinking_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="▼"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginStart="@dimen/dp_8"/>

            </LinearLayout>

            <!-- 分隔线 -->
            <View
                android:id="@+id/v_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_8"/>

            <!-- 思考内容区域 - 使用自定义 ScrollView 解决嵌套滚动问题 -->
            <run.yigou.gxzy.widget.InterceptableScrollView
                android:id="@+id/sv_thinking_content"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:minWidth="200dp"
                android:scrollbars="vertical"
                android:scrollbarStyle="outsideOverlay"
                android:fadeScrollbars="false"
                android:fillViewport="true"
                android:overScrollMode="always">

                <TextView
                    android:id="@+id/tv_thinking_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_4"
                    android:text="正在思考..."
                    android:textColor="#888888"
                    android:textSize="@dimen/sp_13"
                    android:lineSpacingExtra="@dimen/dp_2" />

            </run.yigou.gxzy.widget.InterceptableScrollView>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
