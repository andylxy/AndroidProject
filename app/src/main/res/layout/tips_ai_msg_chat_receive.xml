<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:textSize="@dimen/sp_12"
        android:padding="@dimen/dp_4"
        android:textColor="@android:color/white"
        android:background="@drawable/chat_time_bg"
        android:id="@+id/chat_receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_gravity="center"
        android:text="4月12日 早上07:51" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_12"
        android:layout_marginEnd="@dimen/dp_12"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginBottom="@dimen/dp_6">

        <ImageView
            android:id="@+id/iv_receive_picture"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:background="@drawable/icon"
            android:scaleType="centerCrop" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_receive_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_toEndOf="@id/iv_receive_picture"
            android:paddingStart="@dimen/dp_8"
            android:text="一叶知秋"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/tv_receive_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_receive_nick"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_toEndOf="@id/iv_receive_picture"
            android:background="@drawable/chat_bubble_receive"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_10"
            android:editable="false"
            android:textIsSelectable="true"
            android:text="hello"
            android:textColor="#191919"
            android:textSize="@dimen/sp_15" />
    </RelativeLayout>

</LinearLayout>